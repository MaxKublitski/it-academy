{% extends 'base.html.twig' %}

{% block title %}Orders index{% endblock %}

{% block body %}
    <h1>Orders index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer_id</th>
                <th>Hall_id</th>
                <th>Seanse_id</th>
                <th>Total_price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for orders in orders %}
            <tr>
                <td>{{ orders.id }}</td>
                <td>{{ orders.customerId }}</td>
                <td>{{ orders.hallId }}</td>
                <td>{{ orders.seanseId }}</td>
                <td>{{ orders.totalPrice }}</td>
                <td>
                    <a href="{{ path('order_show', {'id': orders.id}) }}">show</a>
                    <a href="{{ path('order_edit', {'id': orders.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('orders_new') }}">Create new</a>
{% endblock %}
